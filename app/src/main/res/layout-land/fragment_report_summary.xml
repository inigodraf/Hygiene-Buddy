<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragmentReportSummary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomNav"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Back Arrow and Title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    app:tint="#000000" />

                <TextView
                    android:id="@+id/tvReportTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Report Summary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Top Row: Profile + Summary Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Profile Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_bg"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ivUserAvatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_default_user"
                        android:contentDescription="User Avatar"
                        android:background="@drawable/ic_default_user"
                        android:padding="6dp"
                        android:layout_marginEnd="12dp"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUserName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ethan"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:ellipsize="end"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/tvUserAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Age 8"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:ellipsize="end"
                            android:maxLines="1" />

                        <TextView
                            android:id="@+id/tvUserConditions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ASD, ADHD"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:ellipsize="end"
                            android:maxLines="2" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Summary Stats (Points, Badges, Completion) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginStart="8dp">

                    <!-- Total Points -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        android:padding="12dp"
                        android:layout_marginEnd="4dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Points"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvTotalPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150 XP"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2196F3"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>

                    <!-- Badges Earned -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        android:padding="12dp"
                        android:layout_marginHorizontal="4dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Badges"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvBadgesEarned"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>

                    <!-- Task Completion -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@drawable/card_bg"
                        android:padding="12dp"
                        android:layout_marginStart="4dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Completion"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvTaskCompletion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75%"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:ellipsize="end"
                            android:maxLines="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Row: Date Range + Calendar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Left: Date Range Toggle -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/tvDateRangeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date Range"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/toggleDateRange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="true"
                        android:orientation="vertical">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWeek"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Week"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Month"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </LinearLayout>

                <!-- Right: Calendar -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.6"
                    android:orientation="vertical"
                    android:background="#F2FAE6"
                    android:padding="12dp"
                    android:layout_marginStart="8dp">

                    <!-- Month navigation -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/btnPrevMonth"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_chevron_left"
                            android:contentDescription="Previous Month"
                            app:tint="#000000" />

                        <TextView
                            android:id="@+id/tvCurrentMonth"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="August 2025"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:ellipsize="end"
                            android:maxLines="1" />

                        <ImageView
                            android:id="@+id/btnNextMonth"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_right_chevron"
                            android:contentDescription="Next Month"
                            app:tint="#000000" />
                    </LinearLayout>

                    <!-- Calendar Grid -->
                    <GridLayout
                        android:id="@+id/gridCalendar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="7"
                        android:rowCount="6"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Download Report Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDownloadReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download Report (CSV)"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#2196F3"
                android:layout_marginBottom="16dp"
                android:icon="@drawable/ic_download" />

        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation Bar -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>

