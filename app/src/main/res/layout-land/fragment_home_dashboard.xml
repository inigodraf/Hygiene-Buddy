<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeDashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/layoutBottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ivAppLogo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/app_logo"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAppTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hygiene Buddy"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivReminder"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_reminder"
                    android:contentDescription="Reminders"
                    app:tint="#000000" />
            </LinearLayout>

            <!-- Row: Profile + Today -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/layoutChildProfile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/section_bg"
                    android:padding="16dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/ivChildProfile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_default_user"
                        android:scaleType="centerCrop"
                        android:background="@drawable/avatar_bg"
                        android:layout_marginEnd="20dp"
                        android:clickable="true"
                        android:focusable="true"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvChildLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Child Profile"
                            android:textSize="14sp"
                            android:textColor="@color/subtitle_text"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvChildName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/feature_text"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvChildDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="—"
                            android:textSize="14sp"
                            android:textColor="@color/subtitle_text" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/tvTodayDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TODAY - --/--/----"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View"
                        android:textColor="#12A3ED"
                        android:textSize="14sp"
                        android:paddingTop="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row: Task Completed + Points -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/layoutTaskProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E4F2F9"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TASK COMPLETED"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <ProgressBar
                        android:id="@+id/progressTasks"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:progress="0"
                        android:progressTint="@color/black"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvTaskProgress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0% completed"
                        android:textColor="@color/subtitle_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutPoints"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E4F2F9">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POINTS"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPoints"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 XP"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvStreakHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="STREAK"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutWeeklyStreak"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_card_light"
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:id="@+id/layoutStreakDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:id="@+id/layoutStreakStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvCompletedTotal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Completed Total: —"
                        android:textSize="14sp"
                        android:textColor="@color/subtitle_text" />

                    <TextView
                        android:id="@+id/tvLongestStreak"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Longest Streak: —"
                        android:textSize="14sp"
                        android:textColor="@color/subtitle_text" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tvUpcomingHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPCOMING TASKS"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/layoutUpcomingTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/layoutBottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>


