<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/layoutBottomNav">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/tvPersonalizationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvCustomInstructionsTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Custom Instruction Videos"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvCustomInstructionsDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload or record custom videos for hygiene tasks"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="16dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvTasks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnListVideos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="List Existing Videos"
                            android:textSize="14sp"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvRemindersTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reminders"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvRemindersDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Set reminders for hygiene routines"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:id="@+id/layoutRemindersList"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvNoReminders"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="No reminders set"
                                android:textSize="14sp"
                                android:textColor="#999999"
                                android:gravity="center"
                                android:padding="16dp" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddReminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add New Reminder"
                            android:textSize="14sp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvReinforcersTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reinforcers"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tvReinforcersDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Choose preferred reinforcers (rewards)"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="16dp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvReinforcers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnManageReinforcers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Manage Rewards"
                            android:textSize="14sp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/layoutBottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>


