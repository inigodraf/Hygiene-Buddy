<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/layoutBottomNav"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:layout_gravity="center_horizontal">

            <!-- Header -->
            <TextView
                android:id="@+id/tvPersonalizationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Custom Instruction Videos -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvCustomInstructionsTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Custom Instruction Videos"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvCustomInstructionsDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload or record custom videos for hygiene tasks."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnListVideos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="List Existing Videos"
                        android:minWidth="200dp"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.TextButton" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reminders -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRemindersTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminders"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvRemindersDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Set reminders for hygiene routines."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddReminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add New Reminder"
                        android:minWidth="200dp"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reinforcers -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvReinforcersTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reinforcers"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvReinforcersDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Choose preferred reinforcers (rewards)."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnManageReinforcers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Rewards"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Voice Cloning -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvVoiceCloningTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Voice Cloning"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvVoiceCloningDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Record or import your voice to personalize task instructions."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRecordVoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Record Voice"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnImportVoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Import Voice"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSampleVoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Play Sample Voice"
                        android:textSize="14sp"
                        style="@style/Widget.Material3.Button.TextButton" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Language -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginHorizontal="32dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvLanguageTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Language"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvLanguageDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select the language for voice and text prompts."
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/rgLanguageOptions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <RadioButton
                            android:id="@+id/rbEnglish"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="English"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/rbFilipino"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filipino"
                            android:textSize="14sp"
                            android:textColor="#000000" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <include
        android:id="@+id/layoutBottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
