<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCF5F8">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:background="#DCF5F8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/appTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hygiene Buddy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#121417" />
    </LinearLayout>

    <!-- Center Logo (auto-scaled) -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:contentDescription="Onboarding Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/app_logo"
        app:layout_constraintTop_toBottomOf="@id/topHeader"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintDimensionRatio="3:4" />

    <!-- Bottom White Container -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/onboardingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support Every Step of the Way"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#121417" />

        <TextView
            android:id="@+id/onboardingSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Personalized caregiver and teacher tools provide consistent guidance for children."
            android:textSize="14sp"
            android:textColor="#272C2A" />

        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#000000"
            android:text="Get Started"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:paddingVertical="14dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
