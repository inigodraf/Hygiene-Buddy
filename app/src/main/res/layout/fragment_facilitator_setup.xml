<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_arrow_back" />

            <!-- Title -->
            <TextView
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Set up your profile"
                android:textColor="@color/text_header"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Welcome Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, Facilitator!"
            android:textSize="20sp"
            android:textColor="@color/feature_text"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Instruction Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's set up your profile to get started."
            android:textSize="16sp"
            android:textColor="@color/subtitle_text"
            android:gravity="center"
            android:lineSpacingExtra="4sp"
            android:layout_marginBottom="40dp" />

        <!-- Facilitator's Name Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facilitator's Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/feature_text"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFacilitatorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:textSize="16sp"
                android:padding="16dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Relationship Dropdown -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:hint="Select relationship">

            <AutoCompleteTextView
                android:id="@+id/actvRelationship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Relationship to Child"
                android:textSize="16sp"
                android:padding="16dp"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="18sp"
            android:backgroundTint="#A2D1BF"
            android:textColor="#121717"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Footer Note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We'll ask about your child next."
            android:textSize="14sp"
            android:textColor="#617D8A"
            android:gravity="center"
            android:lineSpacingExtra="2sp" />

    </LinearLayout>
</ScrollView>
