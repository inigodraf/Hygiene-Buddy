<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <TextView
            android:id="@+id/tvPersonalizationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Custom Instructions Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <TextView
                    android:id="@+id/tvCustomInstructionsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Custom Instructions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvCustomInstructionsDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload custom video instructions for each task step"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Tasks List Container -->
                <LinearLayout
                    android:id="@+id/layoutTasksList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Task items will be dynamically added here -->
                    <!-- Example task item structure -->
                    <include layout="@layout/item_task_setting"
                        android:id="@+id/taskHandwashing"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />


                    <include layout="@layout/item_task_setting"
                        android:id="@+id/taskToothbrushing"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Manage Instructions Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageInstructions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Custom Instructions"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Reminders Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <TextView
                    android:id="@+id/tvRemindersTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminders"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvRemindersDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set reminders for hygiene routines"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Active Reminders List -->
                <LinearLayout
                    android:id="@+id/layoutRemindersList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Reminder items will be dynamically added here -->
                    <TextView
                        android:id="@+id/tvNoReminders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No reminders set"
                        android:textSize="14sp"
                        android:textColor="#999999"
                        android:gravity="center"
                        android:padding="16dp" />

                </LinearLayout>

                <!-- Add Reminder Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Reminder"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Reinforcers Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <TextView
                    android:id="@+id/tvReinforcersTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reinforcers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="12dp" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvReinforcersDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose preferred reinforcers (rewards)"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Reinforcers Grid -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReinforcers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <!-- Manage Reinforcers Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManageReinforcers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Rewards"
                    android:textSize="14sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- Bottom Navigation -->
        <include layout="@layout/layout_bottom_nav" />

    </LinearLayout>

</ScrollView>