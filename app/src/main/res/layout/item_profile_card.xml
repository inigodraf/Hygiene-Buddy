<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:gravity="center">

    <FrameLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_profile_card"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_toothbrush"
            android:scaleType="centerInside"
            android:contentDescription="Profile Avatar" />

        <!-- Optional overlay for Add New (+) -->
        <ImageView
            android:id="@+id/ivAddIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_add"
            android:contentDescription="Add Profile"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ethan"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center" />
</LinearLayout>
