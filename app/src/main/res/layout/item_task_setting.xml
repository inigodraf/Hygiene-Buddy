<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Task Icon -->
        <ImageView
            android:id="@+id/ivTaskIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_toothbrush"
            android:contentDescription="Task icon"
            android:layout_marginEnd="12dp" />

        <!-- Task Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTaskName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvStepsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 steps configured"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/btnEditTask"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Edit task instructions"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Steps Preview (Collapsible) -->
    <LinearLayout
        android:id="@+id/layoutStepsPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        android:paddingStart="52dp">

        <!-- Step items will be dynamically added here -->
        <TextView
            android:id="@+id/tvStepPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Step previews..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:padding="4dp" />

    </LinearLayout>

</LinearLayout>