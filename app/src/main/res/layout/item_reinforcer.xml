<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_background"
    android:padding="12dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Reinforcer Icon -->
        <ImageView
            android:id="@+id/ivReinforcerIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_handwash"
            android:contentDescription="Reinforcer icon"
            android:layout_marginEnd="12dp" />

        <!-- Reinforcer Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReinforcerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reinforcer Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvReinforcerDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of the reward"
                android:textSize="14sp"
                android:textColor="#666666" />

        </LinearLayout>

        <!-- Selection Toggle -->
        <CheckBox
            android:id="@+id/cbReinforcerSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#2196F3" />

    </LinearLayout>

</LinearLayout>